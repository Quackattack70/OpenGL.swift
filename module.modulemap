module OpenGL [system] {
   module GL [system] {
     header "/usr/include/GL/gl.h"
     link "GL"
     export *
   }
   module GLFW [system] {
     header "/usr/include/GLFW/glfw3.h"
     link "glfw3"
     export *
   }
   link "X11"
   link "Xcursor"
   link "GLU"
   link "GLEW"
   link "Xi"
   link "pthread"
   link "rt"
   link "Xrandr"
   link "Xxf86vm"
   link "Xinerama"

}
